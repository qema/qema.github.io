{{#for post in newest 5 posts}}
<article>
  <small>{{format_date post.date}}</small>
  <h2><a href="{{site.url}}/{{post.path}}">{{post.title}}</a></h2>
  <div class="markdown">
    {{{post.content}}}
  </div>
</article>
{{#endfor}}

<section>
  <a href="{{site.url}}/archive.html">View older posts.</a>
</section>
